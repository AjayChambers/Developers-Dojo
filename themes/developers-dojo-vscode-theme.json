{
    "$schema": "vscode://schemas/color-theme",
    "type": "dark",
    "semanticHighlighting": false,

    "colors": {
                /*

--------------------------------------------------------------------------
  * EDITOR
        - Includes everything in the editor that isn't
        syntax, except for matching bracket pairs.
-------------------------------------------------------------------------- */
        "editor.background": "#1A1816",
        "editor.selectionHighlightBackground": "#0090FF80",
        "editor.selectionBackground": "#0090FF80",
        "editor.selectionForeground": "#EEEEEE",
        "editor.lineHighlightBackground": "#00000000",
        "editor.lineHighlightBorder": "#00000000",
        "editor.hoverHighlightBackground": "#0090FF80",
        "editor.selectionHighlightBorder": "#FFFFFF44",
        "editor.wordHighlightBackground": "#0090FF80",
        /*

--------------------------------------------------------------------------
  * TITLE-BAR
-------------------------------------------------------------------------- */
        "titleBar.activeBackground": "#111111",
        "titleBar.inactiveBackground": "#32302A",
        "titleBar.activeForeground": "#DDDDDD",
        "titleBar.border": "#0F0000",
        "titleBar.inactiveForeground": "#7292AE",
        /*

--------------------------------------------------------------------------
  * SIDE-BAR
-------------------------------------------------------------------------- */
        "sideBar.background": "#161617",
        "sideBarSectionHeader.foreground": "#BBBBBB",
        "sideBarSectionHeader.border": "#0F0000",
        "sideBarSectionHeader.background": "#162640",
        /*

--------------------------------------------------------------------------
  * ACTIVITY-BAR
-------------------------------------------------------------------------- */
        "activityBar.background": "#141312",
        "activityBar.activeFocusBorder": "#DDDDDD",
        "activityBar.border": "#0F0000",
        "activityBar.foreground": "#2CCAFF",
        "activityBar.inactiveForeground": "#777777",
        "activityBar.activeBorder": "#2CCAFF",
        "activityBar.activeBackground": "#00000000",
        /*

--------------------------------------------------------------------------
  * EDITOR TABS & GROUPS
-------------------------------------------------------------------------- */
        "tab.activeBackground": "#032C70",
        "tab.inactiveBackground": "#0F1423",
        "tab.hoverBackground": "#0450B0",
        "tab.border": "#0F0000",
        "tab.selectedBackground": "#0450B0",
        "editorGroupHeader.tabsBackground": "#141210",
        "editorGroup.dropBackground": "#80331A",
        "editorGroupHeader.tabsBorder": "#0F0000",

        "tab.activeBorder": "#000",
        "tab.activeBorderTop": "#2CCAFF",
        "tab.activeForeground": "#DDDDDD",
        "tab.dragAndDropBorder": "#DD6040",
        // "tab.hoverBorder": "",
        // "tab.hoverForeground": "",
        // "tab.inactiveForeground": "",
        // "tab.inactiveModifiedBorder": "",
        // "tab.lastPinnedBorder": "",
        // "tab.selectedBorderTop": "",
        // "tab.selectedForeground": "",

        "editorGroupHeader.border": "#0F0000",
        /*


--------------------------------------------------------------------------
    * ICONS & BADGES
-------------------------------------------------------------------------- */
        "icon.foreground": "#2CCAFF",
        "activityBarBadge.background": "#0E3355",
        "activityBarBadge.foreground": "#2CCAFF",
        "contrastBorder": "#0F0000",
        /*


--------------------------------------------------------------------------
  * STATUS-BAR
-------------------------------------------------------------------------- */
        // > Group: 'STD'
        "statusBar.background": "#07172C",
        "statusBar.foreground": "#77CC88",
        "statusBar.border": "#FFFFFF22",
        // > Group: 'DEBUG'
        "statusBar.debuggingBackground": "#181110",
        "statusBar.debuggingForeground": "#77DD88",
        "statusBar.debuggingBorder": "#FFFFFF11",
        // > Group: 'NO FLDR'
        "statusBar.noFolderBackground": "#202C40",
        "statusBar.noFolderForeground": "#AAAAAA",
        "statusBar.noFolderBorder": "#0F0000",
        "statusBar.focusBorder": "#00CC55",
        "statusBarItem.activeBackground": "#032C70",
        // > Group: Item (Error)
        "statusBarItem.errorBackground": "#400E1C",
        "statusBarItem.errorForeground": "#D999AA",
        "statusBarItem.errorHoverBackground": "#FF000033",
        // > Group Item: (Warning)
        "statusBarItem.warningBackground": "#605418",
        "statusBarItem.warningForeground": "#DDDD99",
        "statusBarItem.warningHoverBackground":"#FFDD0022",
        "statusBarItem.focusBorder": "#00BB55",
        "statusBarItem.hoverBackground": "#11EE5555",
        "statusBarItem.hoverForeground": "#22FF77", // Hover
 /*


--------------------------------------------------------------------------
  * Git Decorations
-------------------------------------------------------------------------- */
        "gitDecoration.modifiedResourceForeground": "#12C4DD",
        "gitDecoration.addedResourceForeground": "#99CC77",
        "gitDecoration.conflictingResourceForeground": "#EE4499",
        "gitDecoration.deletedResourceForeground": "#D99999",
        "gitDecoration.untrackedResourceForeground": "#99CC77",
        "gitDecoration.ignoredResourceForeground": "#888888",
        "gitDecoration.stageDeletedResourceForeground": "#D99999",
        "gitDecoration.renamedResourceForeground": "#AA90FF",
        "gitDecoration.stageModifiedResourceForeground": "#12C4DD",


        // ? unknown
        "editorGroup.border": "#FF33EE",
        "actionBar.toggledBackground": "#FF33EE"
    },
    // Hello world
    "tokenColors": [
        /*



        ******************************************
            Comments Highlighting
        ******************************************/
        {
            "name": "Comments Default",
            "scope": "comment",
            "settings": {
                "foreground": "#727270",
                "fontStyle": ""
            }
        },
        {
            "name": "Block Comments",
            "scope": "comment.block",
            "settings": {
                "foreground": "#307040",
                "fontStyle": ""
            }
        },
        /**



        ******************************************
            JSON & JSONC Textmate Tokens
        ******************************************/
        {
            "name": "JSON Properties Lv 1",
            "scope": "support.type.property-name.json",
            "settings": {
                "foreground": "#4AA4F4",
                "fontStyle": ""
            }
        },

        {
            "name": "Ignore Files FG",
            "scope": "source.ignore",
            "settings": {
                "foreground": "#929292",
                "fontStyle": ""
            }
        },

        {
            "name": "Comment Headers",
            "scope": "comment.line.number-sign.ignore",
            "settings": {
                "foreground": "#11928C",
                "fontStyle": "underline bold"
            }
        }
    ]
}
